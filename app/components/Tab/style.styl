@import '../../static/css/config.styl'

.tab
  display flex
  .tab-item
    flex 1
    text-align center
    height .3rem
    line-height .3rem
  .tba-item:hover, .active
    color $color-theme
  .item-line
    display inline-block
    position absolute
    top .75rem
    left 0
    width 25%
    border-bottom 1px solid $color-theme
    transition all .5s
